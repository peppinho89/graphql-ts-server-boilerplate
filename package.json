{
  "name": "graphql-ts-server-boilerplate",
  "version": "0.0.1",
  "description": "Awesome project developed with TypeORM.",
  "devDependencies": {
    "@graphql-codegen/cli": "^1.8.1",
    "@types/bcrypt": "^3.0.0",
    "@types/connect-redis": "^0.0.11",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.15",
    "@types/graphql": "^14.5.0",
    "@types/ioredis": "^4.0.18",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "@types/node-fetch": "^2.5.2",
    "@types/uuid": "^3.4.5",
    "@types/yup": "^0.26.24",
    "jest": "^24.9.0",
    "nodemon": "^1.19.3",
    "ts-jest": "^24.1.0",
    "ts-node": "8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.5",
    "bcrypt": "^3.0.6",
    "connect-redis": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "graphql": "^14.5.8",
    "graphql-request": "^1.8.2",
    "ioredis": "^4.14.1",
    "node-fetch": "^2.6.0",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.19",
    "uuid": "^3.3.3",
    "yup": "^0.27.0"
  },
  "scripts": {
    "start": "SET NODE_ENV=development&nodemon --exec ts-node --files src/index.ts",
    "test": "SET NODE_ENV=test&jest",
    "start-server-test": "SET NODE_ENV=test&&nodemon --exec ts-node --files src/index.ts",
    "gen-schema-types": "gql2ts src/schema.graphql -o src/types/schema.d.ts"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
